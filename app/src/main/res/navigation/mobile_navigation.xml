<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_fly">

    <fragment
        android:id="@+id/navigation_weather"
        android:name="com.sila.flight_app.ui.weather.WeatherFragment"
        android:label="Hava Durumu"
        tools:layout="@layout/fragment_weather2" />

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.sila.flight_app.ui.maps.MapsFragment"
        android:label="Haritalar"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_fly"
        android:name="com.sila.flight_app.ui.fly.FlyFragment"
        android:label="Hemen Uç"
        tools:layout="@layout/fragment_fly" />

    <fragment
        android:id="@+id/navigation_logbook"
        android:name="com.sila.flight_app.ui.logbook.LogbookFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:label="Uçuşlarım"
        tools:layout="@layout/fragment_logbook" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sila.flight_app.ui.profile.ProfileFragment"
        android:label="Hesabım"
        tools:layout="@layout/fragment_profile" />
</navigation>